<?xml version="1.0"?>
<config>
    <sections>
        <google>
            <groups>
                <mobweb_adwordsconversiontracking module="mobweb_adwordsconversiontracking">
                    <label>AdWords Conversion Tracking</label>
                    <expanded>1</expanded>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <google_conversion_id>
                            <label>Google Conversion ID</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <default></default>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_conversion_id>
                        <google_conversion_language>
                            <label>Google Conversion Language</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <default></default>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_conversion_language>
                        <google_conversion_format>
                            <label>Google Conversion Format</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <default></default>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_conversion_format>
                        <google_conversion_color>
                            <label>Google Conversion Color</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <default></default>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_conversion_color>
                        <google_conversion_label>
                            <label>Google Conversion Label</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <default></default>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_conversion_label>
                        <google_remarketing_only>
                            <label>Google Remarketing Only</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <default></default>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_remarketing_only>
                    </fields>
                </mobweb_adwordsconversiontracking>
            </groups>
        </google>
    </sections>
</config>
